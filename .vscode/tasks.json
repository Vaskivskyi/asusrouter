{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Build Package",
      "type": "shell",
      "command": "uv build",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Pre-commit",
      "type": "shell",
      "command": "uv run pre-commit run --all-files",
      "dependsOn": [
        "Install Dev Requirements"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Run Pytest / 3.11 / Unit",
      "type": "shell",
      "command": "uv run --python 3.11 pytest --cov=asusrouter --cov-report=xml:pytest/unit311.xml --cov-report=term-missing -vv -k 'not test_devices'",
      "dependsOn": [
        "Install Test Requirements"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Run Pytest / 3.12 / Unit",
      "type": "shell",
      "command": "uv run --python 3.12 pytest --cov=asusrouter --cov-report=xml:pytest/unit312.xml --cov-report=term-missing -vv -k 'not test_devices'",
      "dependsOn": [
        "Install Test Requirements"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Run Pytest / 3.13 / Unit",
      "type": "shell",
      "command": "uv run --python 3.13 pytest --cov=asusrouter --cov-report=xml:pytest/unit313.xml --cov-report=term-missing -vv -k 'not test_devices'",
      "dependsOn": [
        "Install Test Requirements"
      ],
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "options": {
        "env": {
          "PYTHONPATH": "${workspaceFolder}"
        }
      },
      "problemMatcher": []
    },
    {
      "label": "Run Pytest / Devices",
      "type": "shell",
      "command": "uv run --python 3.13 pytest tests/test_devices.py --cov=asusrouter --cov-report=term-missing -vv --log-cli-level=INFO",
      "dependsOn": [
        "Install Test Requirements"
      ],
      "group": {
        "kind": "test",
        "isDefault": false
      },
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Install Requirements",
      "type": "shell",
      "command": "uv sync",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Install Dev Requirements",
      "type": "shell",
      "command": "uv sync --group dev",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    },
    {
      "label": "Install Test Requirements",
      "type": "shell",
      "command": "uv sync --group test",
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}